<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="userDao" class="com.epam.catgenome.dao.user.UserDao" autowire="byName">
        <property name="userSequence" value="catgenome.s_user"/>
        <property name="groupSequence" value="cetgenome.s_security_group"/>

        <property name="findUsersByPrefixQuery">
            <value>
                <![CDATA[
                    SELECT
                        u.id as user_id,
                        u.name as user_name,
                        u.attributes as attributes
                    FROM catgenome.user u
                    WHERE
                        LOWER(u.name) LIKE :USER_NAME
                ]]>
            </value>
        </property>

        <property name="createUserQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.user (
                        id,
                        name,
                        attributes)
                    VALUES (
                        :USER_ID,
                        :USER_NAME,
                        :ATTRIBUTES
                    )
                ]]>
            </value>
        </property>

        <property name="addRoleToUserQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.user_role (
                        user_id,
                        role_id)
                    VALUES (
                        :USER_ID,
                        :ROLE_ID)
                ]]>
            </value>
        </property>

        <property name="loadExistingGroupsFromListQuery">
            <value>
                <![CDATA[
                    SELECT name FROM catgenome.security_group WHERE name IN (@in@)
                ]]>
            </value>
        </property>
        <property name="insertGroupQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.security_group (
                        id,
                        name
                    ) VALUES (
                        :GROUP_ID,
                        :GROUP_NAME
                    )
                ]]>
            </value>
        </property>
        <property name="insertUserGroupQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.user_security_group (
                        user_id,
                        group_id
                    ) VALUES (
                        :USER_ID,
                        :GROUP_ID
                    )
                ]]>
            </value>
        </property>
        <property name="loadGroupsByUserIdsQuery" value=""/>
    </bean>
</beans>