<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="com.epam.catgenome.dao.homolog.HomologGeneAliasDao" id="homologGeneAliasDao" autowire="byName">
        <property name="geneAliasSequenceName" value="catgenome.s_homolog_gene_alias"/>
        <property name="insertGeneAliasQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.homolog_gene_alias (
                        id,
                        gene_id,
                        alias
                    ) VALUES (
                        :ID,
                        :GENE_ID,
                        :ALIAS
                    )
                ]]>
            </value>
        </property>
        <property name="deleteGeneAliasesQuery">
            <value>
                <![CDATA[
                    DELETE FROM catgenome.homolog_gene_alias
                ]]>
            </value>
        </property>
        <property name="loadGeneAliasesQuery">
            <value>
                <![CDATA[
                    SELECT
                        id,
                        gene_id,
                        alias
                    FROM catgenome.homolog_gene_alias WHERE gene_id = ?
                ]]>
            </value>
        </property>
    </bean>
</beans>