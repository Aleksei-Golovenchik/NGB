<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="com.epam.catgenome.dao.homolog.HomologGroupDao" id="homologGroupDao" autowire="byName">
        <property name="groupSequenceName" value="catgenome.s_homolog_group"/>
        <property name="insertGroupQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.homolog_group (
                        id,
                        primary_gene_id,
                        primary_gene_tax_id,
                        primary_gene_name,
                        protein_name,
                        database_id
                    ) VALUES (
                        :ID,
                        :PRIMARY_GENE_ID,
                        :PRIMARY_GENE_TAX_ID,
                        :PRIMARY_GENE_NAME,
                        :PROTEIN_NAME,
                        :DATABASE_ID
                    )
                ]]>
            </value>
        </property>
        <property name="deleteGroupsQuery">
            <value>
                <![CDATA[
                    DELETE FROM catgenome.homolog_group
                ]]>
            </value>
        </property>
        <property name="loadGroupQuery">
            <value>
                <![CDATA[
                    SELECT
                        id,
                        primary_gene_id,
                        primary_gene_tax_id,
                        primary_gene_name,
                        protein_name,
                        database_id
                    FROM catgenome.homolog_group WHERE id = ?
                ]]>
            </value>
        </property>
    </bean>
</beans>